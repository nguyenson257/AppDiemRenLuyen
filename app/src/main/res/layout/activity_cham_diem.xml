<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChamDiem">
    <RelativeLayout
        android:id="@+id/header_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/xanhduong"
        android:gravity="center"
        android:paddingTop="35dp"
        android:paddingBottom="35dp">
        <ImageView
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="20dp"
            android:src="@drawable/ic_baseline_close_24"
            android:layout_centerVertical="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/opensans"
            android:gravity="center_horizontal"
            android:text="CHẤM ĐIỂM"
            android:textColor="@color/white"
            android:textSize="28dp"
            android:textStyle="bold" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/header_search"
        android:layout_above="@+id/btn_nopdiem">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="@font/opensans"
                    android:gravity="center"
                    android:text="I. NỘI DUNG 1"
                    android:textAllCaps="true"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/back_cornner"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingBottom="5dp"
                    android:paddingTop="5dp">

                    <TextView
                        android:id="@+id/noidung"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="10dp"
                        android:layout_toLeftOf="@id/chamdiem"
                        android:fontFamily="@font/opensans"
                        android:gravity="center"
                        android:text="Nội dung"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/chamdiem"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/opensans"
                        android:text="Chấm điểm"
                        android:textColor="@color/white"
                        android:textSize="18dp" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/danhsach"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/xanhduong"
                    android:fontFamily="@font/opensans"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:textSize="18sp"
                    android:layout_marginRight="10dp"
                    android:text="Tổng điểm mục 1: 20/20 điểm"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>
    <Button
        android:id="@+id/btn_nopdiem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NỘP ĐIỂM"
        android:background="@drawable/button_back"
        android:textSize="20sp"
        android:layout_alignParentBottom="true"
        android:layout_margin="10dp"/>

</RelativeLayout>